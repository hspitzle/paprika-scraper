{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": ["es7", "dom", "esnext"],
    "strict": true,
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "outDir": "build",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  },
  "include": [
    "src/**/*.ts"
  ]
}
